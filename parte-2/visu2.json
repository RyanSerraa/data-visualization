{
  "title": "Top 10 aeroportos com maior taxa de cancelamento",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "dump.json"
  },
  "transform": [
    {
      "joinaggregate": [
        {
          "op": "count",
          "field": "Voos",
          "as": "TotalVoos"
        }
      ],
      "groupby": ["AeroportoOrigem"]
    },
    {
      "filter": "datum.SituacaoVoo == 'Cancelado'"
    },
    {
      "joinaggregate": [
        {
          "op": "count",
          "field": "Voos",
          "as": "TotalCancelados"
        }
      ],
      "groupby": ["AeroportoOrigem"]
    },
    {
      "calculate": "(datum.TotalCancelados / datum.TotalVoos ) * 100",
      "as": "TaxaCancelamento"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{ "field": "TaxaCancelamento", "order": "descending" }]
    },
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "mark": {
    "type": "point",
    "filled": true,
    "opacity": 0.9
  },
  "encoding": {
    "x": {
      "field": "AeroportoOrigem",
      "type": "nominal",
      "axis": { "labelAngle": -45 },
      "title": "Aeroportos"
    },
    "y": {
      "field": "TaxaCancelamento",
      "type": "quantitative",
      "title": "Taxa de cancelamento %"
    },
    "color": {
      "field": "TaxaCancelamento",
      "type": "quantitative",
      "scale": {
        "domain": [0, 100],
        "range": ["yellow", "blue"]
      }
    },
    "tooltip": [
      { "field": "AeroportoOrigem", "type": "nominal", "title": "Aeroporto" },
      {
        "field": "TotalCancelados",
        "type": "quantitative",
        "title": "Total de Cancelados"
      },
      { "field": "TotalVoos", "type": "nominal", "title": "Total de Voos" },
      {
        "field": "TaxaCancelamento",
        "type": "nominal",
        "title": "Taxa de cancelamento %",
        "format": ".2f"
      }
    ]
  },
  "width": 400,
  "height": 250
}
